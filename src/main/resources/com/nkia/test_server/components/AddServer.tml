<html xmlns="http://www.w3.org/1999/xhtml">


<script>


Ext.onReady(function() {
    
    var serverForm = new Ext.create('Cygnus.form.FormPanel', {   
    	title : 'Create Server',
    	id: 'formPanel',
        labelWidth: 110,
        width : 300,
        height : 200,    
        items : [ {
            fieldLabel : 'Name',
            name:'name',
            allowBlank : false
        }, {
            fieldLabel : 'Hostname',
            name:'hostname',
            allowBlank : false
        }, {
            fieldLabel : 'Ip Address',
            name:'ipAddress',
            allowBlank : false
        }, {
            fieldLabel : 'Description',
            name:'description',
            allowBlank : true
        } ] ,        
        buttons : [{
            text : 'Save',
            formBind:true,
            width:100,
            handler : function(){

                var form = this.up('form').getForm();

                if (form.isValid()) {
                    Ext.Ajax.request({
                       url: '${url}:AddServer',
                       params:form.getValues(),
                       method:'POST',
                       success: function(response, opts) {
                           var jsondata = Ext.decode(response.responseText);
                           NkiaCygnus.alert(jsondata.result, jsondata.message);
                       },
                       failure: function(response, opts) {
                	       NkiaCygnus.alert('', 'server-side failure with status code ' + response.status);
                       }
                    });
                } else {
                    NkiaCygnus.alert('', 'Not valid');
                }
            }

        }],
        renderTo:'div_panel_${divId}'
    });
});
</script>
<body>
<div id="div_panel_${divId}"></div></body>
</html>
